<section>

    <h1>Filtros</h1>
    <h4>Para el ng-repeat</h4>
    <hr />

    <div class="row" style="margin-bottom:15px;">
        <div class="col-md-12">
            <input type="text" ng-model="busqueda.nombre" class="form-control" placeholder="Ingrese lo que desea buscar:" />
            
            <br />
            <select class="form-control" ng-model="busqueda.sexo">
                <option value="value">Cualquiera</option>
                <option value="mujer">Mujer</option>
                <option value="hombre">Hombre</option>
            </select>

        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <tr>
                    <th>Avatar</th>
                    <th><a ng-click="columna='nombre'; reverse = !reverse;">Nombre</a></th>
                    <th><a ng-click="columna='sexo'; reverse = !reverse;">Sexo</a></th>
                    <th>Teléfono</th>
                    <th>Celular</th>
                </tr>
                <tr ng-repeat="persona in personas | filter:busqueda | orderBy:columna:reverse">
                    <td>{{persona.avatar}}</td>
                    <td>{{persona.nombre}}</td>
                    <td>{{persona.sexo}}</td>
                    <td>{{persona.telefono}}</td>
                    <td>{{persona.celular}}</td>
                </tr>
            </table>
        </div>
    </div>

</section>